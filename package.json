{
  "name": "git-slice",
  "version": "2.0.0",
  "description": "",
  "main": "lib/index.js",
  "scripts": {
    "dev:cli":
      "node --inspect -r ts-node/register -r tsconfig-paths/register  src/bin/cli.ts $*",
    "test":
      "nyc mocha -r ts-node/register -r tsconfig-paths/register tests/test.ts",
    "build": "tsc",
    "prettier":
      "prettier --single-quote --write --no-semi \"**/*{js,json,ts,tsx,json}\"",
    "codegen":
      "apollo client:codegen --target=typescript --tagName=gql --outputFlat src/graphql/generated && prettier --write src/graphql/generated/**/*.ts",
    "codegen:clean":
      "rm -rf src/lib/graphql/generated && apollo client:codegen --target=typescript --tagName=gql --outputFlat src/graphql/generated && prettier --write src/graphql/generated/**/*.ts",
    "precommit": "lint-staged",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "type-check": "tsc --noEmit",
    "type-coverage": "type-coverage --strict --at-least 85"
  },
  "author": "",
  "license": "MIT",
  "bin": {
    "git-slice": "./bin/cli.js"
  },
  "lint-staged": {
    "*.{js,json,css,md}": ["yarn run prettier", "git add"]
  },
  "dependencies": {
    "@types/chai": "^4.2.7",
    "@types/debug": "^4.1.5",
    "@types/nodegit": "^0.26.1",
    "@types/sinon": "^7.5.1",
    "apollo": "^2.21.3",
    "apollo-boost": "^0.4.4",
    "axios": "^0.19.0",
    "cli-progress": "^1.8.0",
    "command-line-usage": "^4.0.1",
    "dotenv": "^8.1.0",
    "fs-extra": "^4.0.1",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "isomorphic-unfetch": "^3.0.0",
    "minimist": "^1.2.0",
    "nodegit": "^0.24.1",
    "readline-sync": "^1.4.9",
    "sinon": "^7.2.4",
    "string-hash": "^1.1.3",
    "yarn": "^1.13.0"
  },
  "devDependencies": {
    "@types/request": "^2.48.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "chai": "^4.2.0",
    "codecov": "^3.6.1",
    "debug": "^4.1.1",
    "expect": "^24.9.0",
    "husky": "^0.14.3",
    "jest": "^24.9.0",
    "lint-staged": "^7.0.2",
    "mocha": "^6.2.0",
    "module-alias": "^2.2.2",
    "nyc": "^14.1.1",
    "prettier": "1.11.1",
    "ts-node": "^8.6.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "engines": {
    "node": "~10.16.0"
  }
}
